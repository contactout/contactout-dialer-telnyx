if [ $? -ne 0 ]; then
  echo "âŒ Call flow tests failed! This could break the critical call synchronization."
  echo "Please fix the failing tests before committing."
  echo ""
  echo "The call flow synchronization between Telnyx and UI is critical for user experience."
  echo "If these tests fail, users may experience delayed ringing or other call flow issues."
  exit 1
fi

echo "âœ… Call flow tests passed - call synchronization is working correctly"

# Run other tests
echo "ğŸ§ª Running other tests..."
